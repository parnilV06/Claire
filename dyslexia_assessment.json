            { "value": "ai", "label": "Prefer to Talk to AI", "score": 1 },
            { "value": "write", "label": "Prefer to Write Thoughts or Journal it", "score": 1 },
            { "value": "person", "label": "Prefer to Talk to an actual person (friends, family or an actual Therapist)", "score": 1 }
          ]
        }
      ]
    }
  ],
  "scoringGuidelines": {
    "mild": {
      "range": "0-30",
      "description": "Mild indicators - May benefit from some accommodations"
    },
    "moderate": {
      "range": "31-60",
      "description": "Moderate indicators - Recommended to seek professional assessment"
    },
    "significant": {
      "range": "61-90",
      "description": "Significant indicators - Strongly recommended to seek professional evaluation"
    },
    "severe": {
      "range": "91+",
      "description": "Severe indicators - Professional assessment highly recommended"
    }
  }
}